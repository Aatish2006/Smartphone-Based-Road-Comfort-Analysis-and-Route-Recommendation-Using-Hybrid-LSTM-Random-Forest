# Environment Variables Template

# Copy this file to .env and fill in your configuration

# ============================================================================
# Cloud Backend Configuration
# ============================================================================

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_WORKERS=4

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/road_comfort
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Cache (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=2592000

# ============================================================================
# Security
# ============================================================================

# API Key (optional)
API_KEY=your_api_key_here

# Device ID Hashing Salt (for anonymization)
DEVICE_SALT=your_random_salt_here

# JWT Secret (for future auth)
JWT_SECRET=your_jwt_secret_here

# ============================================================================
# ML Model Configuration
# ============================================================================

# Model Paths
LSTM_ENCODER_PATH=./ml-pipeline/inference/models/lstm_encoder.pt
RF_CLASSIFIER_PATH=./ml-pipeline/inference/models/rf_classifier.pkl
SCALER_PATH=./ml-pipeline/inference/models/scaler.pkl

# Model Inference
MODEL_DEVICE=cpu  # or 'cuda' if GPU available
MODEL_BATCH_SIZE=64
INFERENCE_TIMEOUT_MS=500

# ============================================================================
# System Configuration
# ============================================================================

# Trigger Threshold (k * sigma)
TRIGGER_K_SIGMA=2.5
TRIGGER_BASELINE_WINDOW_SECONDS=300

# Aggregation
AGGREGATION_N_VEHICLES=10
AGGREGATION_MIN_SAMPLES=3
CACHE_VALIDITY_DAYS=30

# ============================================================================
# Logging & Monitoring
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=./logs/api.log
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Prometheus Metrics
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ============================================================================
# Privacy & Compliance
# ============================================================================

# Data Retention
RAW_DATA_RETENTION_DAYS=7
AGGREGATED_DATA_RETENTION_DAYS=365

# Encryption
ENCRYPT_IN_TRANSIT=true
ENCRYPT_AT_REST=false

# ============================================================================
# Development / Testing
# ============================================================================

# Enable test endpoints (for debugging)
ENABLE_TEST_ENDPOINTS=false

# Mock data generation
GENERATE_SYNTHETIC_DATA=false
SYNTHETIC_DATA_COUNT=100

# ============================================================================
# Deployment (AWS, GCP, Azure)
# ============================================================================

# AWS Configuration (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
S3_BUCKET_NAME=road-comfort-models

# GCP Configuration (optional)
GCP_PROJECT_ID=your-project-id
GCP_STORAGE_BUCKET=road-comfort-models

# Azure Configuration (optional)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=road-comfort
AZURE_STORAGE_ACCOUNT=roadcomfortstorage
